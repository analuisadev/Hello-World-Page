		$("#mensaje_registro").html("Correo electrónico no válido");
		$("#mensaje_registro").show();
		$("#registro_mail").addClass("rojo");
	} else if(mail!=mail2) { 
		$("#mensaje_registro").html("Los correos electrónicos no coinciden");
		$("#mensaje_registro").show();
