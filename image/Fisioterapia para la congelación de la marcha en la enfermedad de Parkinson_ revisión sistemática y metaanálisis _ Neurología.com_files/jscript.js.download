		var id = profile.id;
		var firstName = profile.firstName;
		var lastName = profile.lastName;
		var emailAddress = profile.emailAddress;
		var pictureUrl = profile.pictureUrls.values[0];
		var profileUrl = profile.publicProfileUrl;
		var country = profile.location.name;
		
		$.get($('#v_ruta').val() + 'include/login.php', {ln_name: firstName + " " + lastName, ln_mail: emailAddress, ln_id: id}, function(respuesta){ 
			if (respuesta==1) window.location = $('#v_url').val();
			else alert("Error en inicio de sesión con Linkedin");
		 });	

	});
}

