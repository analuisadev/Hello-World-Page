
function login(user, pass, ruta, url) {
	
	if (user=='' || pass=='') { //popup_mensaje("Datos incorrectos","warning");
		$("#mensaje_login").html("Datos incompletos");
		$("#mensaje_login").show();
	} else {
		if (user=='logout' && pass=='logout') popup_loading("Cerrando Sesión","info");
		
		//else popup_loading("Iniciando Sesión","success");
		
		$.get(ruta + 'include/login.php', {user: user, pass: pass}, function(respuesta){ 
			//alert(respuesta);
			if (respuesta==1) window.location = url;
			else { //popup_mensaje("Datos incorrectos","warning"); //alert("Datos incorrectos");		
				$("#mensaje_login").html(respuesta);
				$("#mensaje_login").show();
				$("#mail_usuario").addClass("rojo");
			}
		 });	
	}
}

