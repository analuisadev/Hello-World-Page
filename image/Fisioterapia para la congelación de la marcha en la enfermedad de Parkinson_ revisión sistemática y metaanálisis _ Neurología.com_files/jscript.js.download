		$("#mensaje_registro").show();
		$("#registro_pwd").addClass("rojo");
		$("#registro_pwd_2").addClass("rojo");
	} else {
		if (newsletter) news = 1; else news = 0;
		if (privacidad) priv = 1; else priv = 0;
		
		if (privacidad) {
		
			$.get(ruta + 'include/login_registro.php', {nombre: nombre, mail: mail, pwd: pwd, news: news}, function(respuesta){ 
				//alert(respuesta);
				if (respuesta==1) window.location = url;
				else { //popup_mensaje("Ya existe un usuario con esa dirección de correo electrónico","warning"); //alert("Datos incorrectos");
