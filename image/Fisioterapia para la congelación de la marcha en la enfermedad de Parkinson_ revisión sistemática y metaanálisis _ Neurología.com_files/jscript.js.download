var menu = function(url){
	var xhr = new XMLHttpRequest;
		
	xhr.open("GET", url);

	xhr.onreadystatechange = function(){
		if (xhr.readyState == 4 && xhr.status == 200){				
			//document.getElementById("capa_flotante").innerHTML = xhr.responseText; //lo mismo que la linea de abajo pero con javascript directo
			$("#popup_login").html(xhr.responseText); //lo mismo que la linea de arriba pero usando jquery
		}
		
	}
	
	xhr.send();
	
	$("#popup_login").fadeIn(300, function(){
		$('html').click(function(){
			cerrar_menu();
		});
	}).css("display", "block");
	
	$("#popup_login").click(function(e){
		e.stopPropagation();
	});
	
	$('body,html').animate({ scrollTop: 0 }, 800); //sube para al top la pagina
}

var cerrar_menu = function(){
	$("#popup_login").fadeOut(300);
	$('html').unbind("click");
}

var popup = function(url){
	var xhr = new XMLHttpRequest;
		
	xhr.open("GET", url);

	xhr.onreadystatechange = function(){
		if (xhr.readyState == 4 && xhr.status == 200){				
			//document.getElementById("capa_flotante").innerHTML = xhr.responseText; //lo mismo que la linea de abajo pero con javascript directo
			$("#capa_flotante").html(xhr.responseText); //lo mismo que la linea de arriba pero usando jquery
		}
		
	}
	
	xhr.send();
		
	$("#pantalla_oscura").fadeIn(300).css("display", "block");
	$("#capa_flotante").fadeIn(300).css("display", "block");	
	
	$('body,html').animate({ scrollTop: 0 }, 800); //sube para al top la pagina
}

var popup_exterior = function(url){
	var	ancho	= (window.innerWidth / 2),
		alto	= (window.innerHeight / 2),
		top		= (screen.height / 2) - (alto / 2),
		left 	= (screen.width / 2) - (ancho / 2);
		
	window.open(url, 'compartir', 'top=' + top + ',left=' + left + ',toolbar=0,status=0,width=' + ancho + ',height=' + alto);
}

var cerrar_popup = function(){
