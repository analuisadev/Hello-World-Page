function registro(nombre, mail, mail2, pwd, pwd2, privacidad, newsletter, ruta, url) {
	
	if (nombre=='' || mail=='' || mail2=='' || pwd=='' || pwd2=='') { //popup_mensaje("Rellene todos los campos del registro","warning");
		$("#mensaje_registro").html("Datos incompletos, rellene todos los campos");
